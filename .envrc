# PayReady AI Environment Configuration
# Simplified to 3 essential config files

# Core application settings
[[ -f ~/.config/payready/env.core ]] && dotenv ~/.config/payready/env.core

# LLM and AI model settings
[[ -f ~/.config/payready/env.llm ]] && dotenv ~/.config/payready/env.llm

# Services and integrations
[[ -f ~/.config/payready/env.services ]] && dotenv ~/.config/payready/env.services

# Add bin to PATH
export PATH="$PWD/bin:$PATH"

# Set project context
export PAYREADY_PROJECT_ROOT="$PWD"
export PAYREADY_PROJECT_NAME="$(basename "$PWD")"
export PAYREADY_BUILD_DATE="$(date +%Y-%m-%d)"